<Window x:Class="ChessGame.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Chess Game" Height="700" Width="1000" WindowStartupLocation="CenterScreen">
    
    <Grid Background="#E5E5E5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>   <ColumnDefinition Width="280"/> </Grid.ColumnDefinitions>

        <Viewbox Grid.Column="0" Margin="20">
            <Border BorderBrush="#333" BorderThickness="5">
                <UniformGrid Name="ChessBoardGrid" Rows="8" Columns="8" Width="600" Height="600" Background="White"/>
            </Border>
        </Viewbox>

        <Border Grid.Column="1" Background="White" Margin="10" Padding="15" CornerRadius="5">
            <StackPanel>
                <Label Content="Game status" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center"/>
                <TextBlock Name="TxtStatus" Text="Move for white" FontSize="16" HorizontalAlignment="Center" Margin="0,0,0,10"/>

                <Label Content="Move history" FontWeight="Bold"/>
                <ListBox Name="MoveHistoryList" Height="200" BorderBrush="#CCC"/>

                <Label Content="Actions" FontWeight="Bold" Margin="0,10,0,0"/>
                
                <Button Content="Save (JSON)" Margin="2" Click="SaveGame_Click"/>
                <Button Content="Refresh last game" Margin="2" Click="LoadGame_Click"/>
                <Button Content="Back to menu" Margin="2,20,2,2" Background="#FFDDDD" Click="BackToMenu_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>