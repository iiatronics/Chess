<Window x:Class="ChessGame.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Chess Game" Height="750" Width="1100" WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Images/rock_bg.jpg" Stretch="UniformToFill"/>
        </Grid.Background>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="300"/> </Grid.ColumnDefinitions>

        <Viewbox Grid.Column="0" Margin="20">
            <Border BorderBrush="#111" BorderThickness="10" CornerRadius="4" Background="#CC000000">
                <UniformGrid Name="ChessBoardGrid" Rows="8" Columns="8" Width="600" Height="600"/>
            </Border>
        </Viewbox>

        <Border Grid.Column="1" Margin="15" Padding="15" CornerRadius="10" BorderBrush="#333" BorderThickness="2">
            
            <Border.Background>
                <ImageBrush ImageSource="/Images/star_bg.jpg" Stretch="UniformToFill"/>
            </Border.Background>

            <StackPanel>
                <Label Content="CHESS ROCKS" FontSize="24" FontWeight="Bold" 
                       Foreground="White" HorizontalAlignment="Center" Margin="0,0,0,20"/>

                <Border Background="#BF000000" CornerRadius="8" Padding="10" Margin="0,0,0,15">
                    <StackPanel>
                        <Label Content="Game Status" FontSize="14" Foreground="#CCC" HorizontalAlignment="Center"/>
                        <TextBlock Name="TxtStatus" Text="White's Turn" FontSize="18" FontWeight="Bold" 
                                   Foreground="#FFD700" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>

                <Label Content="Move History" FontWeight="Bold" Foreground="White" Margin="0,0,0,5"/>
                
                <ListBox Name="MoveHistoryList" Height="250" 
                         BorderBrush="Transparent" Background="#D9FFFFFF" 
                         Margin="0,0,0,20">
                    <ListBox.Resources>
                        <Style TargetType="{x:Type ScrollBar}">
                            </Style>
                    </ListBox.Resources>
                </ListBox>

                <StackPanel>
                    <Button Content="Save Game (JSON)" Height="35" Margin="0,0,0,10" Click="SaveGame_Click" Background="#EEE"/>
                    <Button Content="Load Last Game" Height="35" Margin="0,0,0,10" Click="LoadGame_Click" Background="#EEE"/>
                    <Button Content="Exit to Menu" Height="35" Margin="0,20,0,0" Background="#FF6666" Foreground="White" FontWeight="Bold" Click="BackToMenu_Click"/>
                </StackPanel>
                
            </StackPanel>
        </Border>
    </Grid>
</Window>