<Window x:Class="ChessGame.UI.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SETTINGS" Height="300" Width="400" WindowStartupLocation="CenterScreen">
    <StackPanel Margin="20">
        <CheckBox Content="Sound: turn on" IsChecked="True" Margin="5"/>
        <CheckBox Content="Highlight moves" IsChecked="True" Margin="5"/>
        <Button Content="Save" Margin="0,20,0,0" Click="Save_Click"/>
    </StackPanel>
</Window>