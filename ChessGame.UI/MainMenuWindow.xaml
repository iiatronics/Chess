<Window x:Class="ChessGame.UI.MainMenuWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Menu" Height="500" Width="400" WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Images/menu_bg.jpg" Stretch="UniformToFill"/>
        </Grid.Background>

        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            
            <TextBlock Text="CHESS" FontSize="48" FontWeight="Bold" 
                       HorizontalAlignment="Center" Margin="0,0,0,40"
                       Foreground="White">
                <TextBlock.Effect>
                    <DropShadowEffect ShadowDepth="3" Color="Black" BlurRadius="5"/>
                </TextBlock.Effect>
            </TextBlock>

            <Button Click="Start_Click" Margin="0,0,0,15" 
                    Background="Transparent" BorderThickness="0">
                <Image Source="/Images/btn_new.png" Width="200" Height="60" Stretch="Uniform"/>
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Button.Style>
            </Button>

            <Button Click="Settings_Click" Margin="0,0,0,15"
                    Background="Transparent" BorderThickness="0">
                <Image Source="/Images/btn_settings.png" Width="200" Height="60" Stretch="Uniform"/>
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Button.Style>
            </Button>

            <Button Click="About_Click" Margin="0,0,0,15"
                    Background="Transparent" BorderThickness="0">
                <Image Source="/Images/btn_about.png" Width="200" Height="60" Stretch="Uniform"/>
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Button.Style>
            </Button>

            <Button Click="Exit_Click"
                    Background="Transparent" BorderThickness="0">
                <Image Source="/Images/btn_exit.png" Width="200" Height="60" Stretch="Uniform"/>
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Button.Style>
            </Button>

        </StackPanel>
    </Grid>
</Window>